{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-5">
    <h2>Aday Düzenleme</h2>
    <form method="POST" action="/candidate/update/{{candidate.id}}">
        <div class="mb-3">
            <input type="text" name="name" value="{{candidate.name}}" class="form-control" id="name" placeholder="Aday ad soyad">
        </div>
        <div class="mb-3">
            <input type="text" name="email" value="{{candidate.email}}" class="form-control" id="email" placeholder="Aday email adres">
        </div>
        <div class="mb-3">
            <input type="text" name="phone" value="{{candidate.phone}}" class="form-control" id="phone" placeholder="Aday tel">
        </div>
        <button type="submit" class="btn btn-primary">Düzenle</button>
    </form>
</div>
{% endblock %}