{% extends 'base.html.twig' %}


{% block content %}
    <h3>Candidates</h3>
    <ul>
        {% for candidate in candidates %}
            <li>
                <a href="/candidate/update/{{candidate.id}}">
                    {{candidate.name}}
                </a>
                <a href="/candidate/delete/{{candidate.id}}" data-toggle="confirmation" data-title="Delete?">
                    <i style="color:red;" class="bi bi-trash"></i>
                </a>
            </li>
        {% else %}
            No candidate have been found.
        {% endfor %}
    </ul>
{% endblock %}

